package layouts

import (
	"github.com/Francesco99975/reviews/internal/models"
	"github.com/Francesco99975/reviews/views/components"
	"strconv"
)

// Base layout for unauthenticated pages
templ Base(site models.Site) {
	@CoreHTML(site) {
		<div class="min-h-screen flex flex-col">
			@components.Header(site)
			{ children... }
			@components.Footer(site.AppName, strconv.Itoa(site.Year))
		</div>
	}
}
